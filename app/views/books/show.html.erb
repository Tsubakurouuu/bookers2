<h1>New book</h1>
  <%= form_with model: @book do |f| %>
      <%= f.label :Title %><br>
      <%= f.text_field :title %><br><br>
      <%= f.label :Opinion %><br>
      <%= f.text_area :opinion %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.opinion %></td>
      </tr>
  </tbody>
</table>