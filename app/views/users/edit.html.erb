<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <%= f.label :Name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :Image %><br>
  <%= f.file_field :profile_image %><br><br>
  <%= f.label :Introduction %><br>
  <%= f.text_area :introduction %><br><br>
  <%= f.submit "Update User", class: "btn btn-success" %>
<% end %>
</div>
</div>
</div>
