<div class = "container">
  <div class="row">
    <div class="col-md-3">
<h1>User info</h1>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class = "table">
        <tr class = "row"><th class = "col-md-6">name</th>
        <td><%= @user.name %></td></tr><br>

        <tr class = "row"><th class = "col-md-6">introduction</th>
        <td><%= @user.introduction %></td></tr><br>
      </table>
        <p>
          <%= link_to edit_user_path(@user.id), class: 'nav-list' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </p>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
      <%= f.label :Title %><br>
      <%= f.text_field :title %><br><br>
      <%= f.label :Opinion %><br>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
  </div>
<div class="col-md-8 offset-md-1">
<h1>Users</h1>
<table class = "table">
  <thead>
    <tr>
      <th class = "col-md-4">image</th>
      <th class = "col-md-4">name</th>
      <th class="col-md-4"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>