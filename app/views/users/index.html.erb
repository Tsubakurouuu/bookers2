<h1>New book</h1>
  <%= form_with model: @book do |f| %>
      <%= f.label :Title %><br>
      <%= f.text_field :title %><br><br>
      <%= f.label :Opinion %><br>
      <%= f.text_area :opinion %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>